<%@ page contentType="text/html;charset=UTF-8" language="java" %>


<div class="row mt-3">
    <div class="col-12">
        <label>Наименование: </label>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <input type="text" class="form-control" name="itemName" placeholder="Наименование...">
    </div>
</div>


<div class="row mt-3">
    <div class="col-12">
        <label>Описание: </label>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <textarea class="form-control" name="itemDescription" rows="5" placeholder="Описание..."></textarea>
    </div>
</div>


<div class="row mt-3">
    <div class="col-12">
        <label>Крайний срок: </label>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <input type="date" class="form-control" name="itemDate">
    </div>
</div>

